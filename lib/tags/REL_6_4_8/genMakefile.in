	ar -r debug/\$(LIBDEBUG)-core.a \$(CORE_DEBUG) \$(ASM_DEBUG)

release/\$(LIBNAME)-core.a: Makefile release/make \$(CORE_RELEASE) \$(ASM_RELEASE)
	ar -r release/\$(LIBNAME)-core.a \$(CORE_RELEASE) \$(ASM_RELEASE)

