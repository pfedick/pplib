CORE_DEBUG	=$CORE_DEBUG

INET_RELEASE	=$INET_RELEASE

INET_DEBUG	=$INET_DEBUG

INET_NOSSL_RELEASE	=$INET_NOSSL_RELEASE

INET_NOSSL_DEBUG	=$INET_NOSSL_DEBUG


