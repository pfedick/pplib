	-cp \$(incdir)/ppl6-tk*.h \$(TARGETINCLUDE)
	-cp \$(incdir)/ppl6-sound.h \$(TARGETINCLUDE)
	-cp \$(incdir)/ppl6-crypt.h \$(TARGETINCLUDE)
	-cp \$(incdir)/ppl6-db.h \$(TARGETINCLUDE)
	-cp \$(incdir)/ppl6-unixconfig.h \$(TARGETINCLUDE)/ppl6-config.h
