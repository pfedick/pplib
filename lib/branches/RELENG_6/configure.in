      AC_SUBST(MAD_CFLAGS)
	  AC_SUBST(MAD_LIBS)
      
      AC_DEFINE(HAVE_LIBMAD, 1, [Define if you have the libmad library])
      ], [report_have_libmad="no"], -lm)
  fi
fi
