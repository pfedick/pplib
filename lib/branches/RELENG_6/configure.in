AC_ARG_WITH(libmad,
  [[  --with-libmad[=DIR]     enable support for decoding of mp3 files [in DIR]]])
if test "$with_libmad" != "no"
then
  if test -n "$with_libmad" -a "$with_libmad" != "yes"
